<Page
    x:Class="AutoSugestao_01.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AutoSugestao_01"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    
    <Grid Background="#64B5F6">
        <TextBlock
		    x:Name="lblResultado"
            HorizontalAlignment="Center"
		    Margin="10,194,10,0"
		    TextWrapping="Wrap"
            TextAlignment="Center"
		    Text="Voce Ainda Não Digitou Nada"
		    FontSize="24"
		    VerticalAlignment="Top" Width="380" />

        <TextBox x:ConnectionId='1'
            x:Name="txtDigita"
            HorizontalAlignment="Left"
            Margin="43,118,0,0"
            TextWrapping="NoWrap"
            IsTextPredictionEnabled="False"
            InputScope="AlphanumericFullWidth"
            VerticalAlignment="Top"
                                    
            Width="319" />

        <TextBlock
        	x:Name="lblNumero"
        	HorizontalAlignment="Left"
            TextAlignment="Center"
        	Margin="43,65,0,0"
        	TextWrapping="Wrap"
        	Text="Digite Seu Nome"
        	FontSize="24"
        	VerticalAlignment="Top" Width="319" />
    </Grid>
</Page>


