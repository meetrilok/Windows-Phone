    xmlns:local="using:Json_01"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="#64B5F6">
        <TextBlock
		    x:Name="lblResultado"
            HorizontalAlignment="Center"
		    Margin="10,172,10,0"
		    TextWrapping="Wrap"
            TextAlignment="Left"
		    Text="Voce Ainda Não Desserializou Nada"
		    FontSize="24"
		    VerticalAlignment="Top" Width="380" />

        <Button x:ConnectionId='1'
		    x:Name="btnExecuta"
		    Content="Executa"
		    HorizontalAlignment="Left"
		    Margin="145,485,0,0"
		    VerticalAlignment="Top"
		                             />

        <TextBlock
        	x:Name="lblNumero"
        	HorizontalAlignment="Left"
        	Margin="10,65,0,0"
        	TextWrapping="Wrap"
            TextAlignment="Center"
        	Text="Exemplo de Uso do JSON"
        	FontSize="24"
        	VerticalAlignment="Top" 
            Width="390" />
