<Page
    x:Class="DataTemplate_04.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DataTemplate_04"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">


    <Grid Background="#64B5F6" Loaded="CarregaGrade">
        <ProgressRing 
            Name="progressring" 
            Height="90" 
            Width="90" 
            IsActive="False"/>
        
        <ListView 
            Grid.Row="0" 
            x:Name="ListaEstoria" 
            Width="400" 
            Loaded="CarregaLista">
            
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock 
                        Text="{Binding name}" 
                        FontSize="24" 
                        FontWeight="Light"
                        Margin="12,6"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
