<Page
    x:Class="FlyOut_03.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FlyOut_03"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="#64B5F6">
        <TextBlock 
            x:Name="lblResultado" 
            HorizontalAlignment="Center"
            Margin="5,342,15,0" 
            TextWrapping="Wrap" 
            TextAlignment="Center" 
            Text="Voce Ainda Não Escolheu Nada" 
            FontSize="24" 
            VerticalAlignment="Top" 
            Width="380" />
        
        <AppBarButton 
            Icon="Sort" 
            IsCompact="True">
            
            <Button.Flyout>
                <MenuFlyout>
                    <MenuFlyoutItem 
                        Text="Opção #1" 
                        Tag="Opcao1"
                        Click="FlyOutMenu"/>
                    
                    <MenuFlyoutItem 
                        Text="Opção #2" 
                        Tag="Opcao2" 
                        Click="FlyOutMenu"/>
                </MenuFlyout>
            </Button.Flyout>
        </AppBarButton>
    </Grid>
</Page>
