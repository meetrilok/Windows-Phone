<Page
    x:Class="TextBox_04.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TextBox_04"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="#64B5F6">
        <TextBlock 
            x:Name="lblNome" 
            HorizontalAlignment="Left" 
            Margin="20,65,0,0" 
            TextWrapping="Wrap" 
            Text="Nome" 
            FontSize="24" 
            TextAlignment="Center"
            VerticalAlignment="Top" 
            Height="39" Width="89" />

        <TextBox 
            x:Name="txtNome" 
            HorizontalAlignment="Left" 
            Margin="118,65,0,0" 
            TextWrapping="Wrap" 
            InputScope="Default"
            Text="" 
            VerticalAlignment="Top" 
            Width="272" />

        <TextBlock 
            x:Name="lblEmail" 
            HorizontalAlignment="Left" 
            Margin="20,131,0,0" 
            TextWrapping="Wrap" 
            Text="eMail" 
            FontSize="24" 
            TextAlignment="Center"
            VerticalAlignment="Top" 
            Height="39" />

        <TextBox 
            x:Name="txtEmail" 
            HorizontalAlignment="Left" 
            Margin="118,131,0,0" 
            TextWrapping="Wrap" 
            InputScope="EmailSmtpAddress"
            Text="" 
            VerticalAlignment="Top" 
            Width="272" />

        <TextBlock 
            x:Name="lblTelefone" 
            HorizontalAlignment="Left" 
            Margin="20,206,0,0" 
            TextWrapping="Wrap" 
            Text="Telefone" 
            FontSize="24" 
            TextAlignment="Center"
            VerticalAlignment="Top" 
            Height="39" />

        <TextBox 
            x:Name="txtTelefone" 
            HorizontalAlignment="Left" 
            Margin="118,206,0,0" 
            TextWrapping="Wrap" 
            Text="" 
            VerticalAlignment="Top" 
            InputScope="TelephoneNumber"
            Width="272" />

        <TextBlock 
            x:Name="lblWeb" 
            HorizontalAlignment="Left" 
            Margin="20,272,0,0" 
            TextWrapping="Wrap" 
            Text="Web" 
            FontSize="24" 
            TextAlignment="Center"
            VerticalAlignment="Top" 
            Height="39" />

        <TextBox 
            x:Name="txtWeb" 
            HorizontalAlignment="Left" 
            Margin="118,272,0,0" 
            TextWrapping="Wrap" 
            InputScope="Url"
            Text="" 
            VerticalAlignment="Top" 
            Width="272" />

        <TextBlock 
            x:Name="lblResultado" 
            HorizontalAlignment="Center" 
            Margin="20,400,0,0" 
            TextWrapping="Wrap" 
            TextAlignment="Center" 
            Text="Voce Ainda Não Digitou Nada" 
            FontSize="24" 
            VerticalAlignment="Top" 
            Width="380" />

        <Button x:ConnectionId='1' 
            x:Name="btnExecuta" 
            Content="Executa" 
            HorizontalAlignment="Left"
            Margin="149,506,0,0" 
            VerticalAlignment="Top" 
                                     />

    </Grid>


</Page>


