<Page
    x:Class="ProgressControl_01.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProgressControl_01"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="#64B5F6">
        <TextBlock 
            Text="Progress Bar :" 
            FontSize="25" 
            Width="200" 
            Margin="16,57,184,549" />
        
        <ProgressBar 
            x:Name="myProgressBar" 
            Minimum="0" 
            Maximum="200" 
            Value="40" 
            Height="45" 
            Margin="12,98,12,497"/>
        
        <TextBlock 
            Text="Progress Ring :" 
            FontSize="25" 
            Width="200" 
            Margin="16,211,184,395" />
        
        <ProgressRing 
            x:Name="myProgressRing" 
            IsActive="True" 
            Height="90" 
            Width="90" />
        
        <TextBlock 
            Text="Indeterminate Progressbar :" 
            FontSize="25" 
            Margin="16,407,43,199" />
        
        <ProgressBar 
            x:Name="myIndeterminateProbar" 
            IsIndeterminate="True" 
            Height="70" 
            Margin="10,456,-10,134"/>
    </Grid>
</Page>

