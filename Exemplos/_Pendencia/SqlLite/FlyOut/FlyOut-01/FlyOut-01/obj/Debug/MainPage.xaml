<Page
    x:Class="FlyOut_01.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FlyOut_01"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="#FF6C7476">
        <TextBlock TextAlignment="Center" Margin="10,61,10,0" TextWrapping="Wrap" Text="Lista de Opções" FontSize="24" VerticalAlignment="Top" />
        <TextBlock x:Name="lblResultado" TextAlignment="Center" Margin="10,110,10,0" TextWrapping="Wrap" Text="" FontSize="21" VerticalAlignment="Top" />

        <Button Content="Opções" Margin="137,300,0,283">
            <Button.Flyout>
                <MenuFlyout>
                    <MenuFlyoutItem x:ConnectionId='1' x:Name="Reset" Text="Reset de Opções"                    />
                    <ToggleMenuFlyoutItem x:ConnectionId='2' x:Name="Opcao2" Text="Opção #2" IsChecked="{Binding IsRepeatEnabled, Mode=TwoWay}"                   />
                    <ToggleMenuFlyoutItem x:ConnectionId='3' x:Name="Opcao3" Text="Opção #3" IsChecked="{Binding IsRepeatEnabled, Mode=TwoWay}"                   />
                </MenuFlyout>
            </Button.Flyout>
        </Button>
    </Grid>

</Page>

