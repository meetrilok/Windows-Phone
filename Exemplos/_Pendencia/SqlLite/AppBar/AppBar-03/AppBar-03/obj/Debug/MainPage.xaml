<Page
    x:Class="AppBar_03.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AppBar_03"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.BottomAppBar>
        <CommandBar Name="MinhaAppBar" >
            <AppBarButton Label="Refresh" Icon="Refresh" />
            <AppBarButton Label="Help" Icon="Help" />
        </CommandBar>
    </Page.BottomAppBar>

    <Grid Background="#FF6C7476">
        <Button x:ConnectionId='1' x:Name="btnMostra" Content="Ativa" HorizontalAlignment="Left" Margin="65,275,0,0" VerticalAlignment="Top"                          />
        <Button x:ConnectionId='2' x:Name="btnEsconde" Content="Desativa" HorizontalAlignment="Left" Margin="222,275,0,0" VerticalAlignment="Top"                             />
        <TextBlock x:Name="lblResultado" TextAlignment="Center" HorizontalAlignment="Left" Margin="35,238,0,0" TextWrapping="Wrap" Text="Controla a Ativação da AppBar" FontSize="24" VerticalAlignment="Top" Width="338"  />
    </Grid>
</Page>

