        </Button>
        <TextBlock x:Name="lblResultado" HorizontalAlignment="Left" Margin="90,408,0,0" TextAlignment="Center" TextWrapping="Wrap" Text="o Usuário ainda não Escolheu" VerticalAlignment="Top" Width="198"/>
        
    </Grid>
