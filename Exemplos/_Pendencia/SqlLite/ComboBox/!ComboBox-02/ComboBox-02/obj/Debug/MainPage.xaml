<Page
    x:Class="ComboBox_02.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ComboBox_02"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>

        <TextBlock
            x:Name="TxtEscolha"
            HorizontalAlignment="center"
            Margin="62,75,59,0"
            TextWrapping="Wrap"
            Text="Voce Escolheu "
            FontSize="24"
            VerticalAlignment="Top" 
            Width="279" />

        <TextBlock
            x:Name="TxtResultado"
            HorizontalAlignment="Left"
            Margin="85,143,0,0"
            TextWrapping="Wrap"
            Text="Resultado da Seleção"
            FontSize="24"
            VerticalAlignment="Top" />

        <TextBlock
            x:Name="TxtOpcao"
            HorizontalAlignment="Left"
            Margin="85,220,0,0"
            TextWrapping="Wrap"
            Text="Escolha uma Opção"
            FontSize="24"
            VerticalAlignment="Top" />

        <ComboBox
            x:Name="cmbBox"
            HorizontalAlignment="Left"
            Margin="85,283,0,0"
            VerticalAlignment="Top"
            Width="208" >

            <ComboBoxItem Content="Primeira Opção" IsSelected="true"/>
            <ComboBoxItem Content="Segunda Opção" />
            <ComboBoxItem Content="Terceira Opção" />
            <ComboBoxItem Content="Quarta Opção" />
            <ComboBoxItem Content="Quinta Opção" />

        </ComboBox>

        <Button x:ConnectionId='1'
            x:Name="BtnOk"
            Content="Selecionado"
            HorizontalAlignment="Left"
            Margin="129,401,0,0"
            VerticalAlignment="Top"
                                />

    </Grid>
</Page>

