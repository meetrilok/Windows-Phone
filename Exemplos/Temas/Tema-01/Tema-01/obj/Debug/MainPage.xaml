<Page
    x:Class="Tema_01.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Tema_01"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        
    <Page.Resources>
        <SolidColorBrush 
            x:Key="MyBrush" 
            Color="Brown" />
        
        <Style 
            TargetType="Button" 
            x:Key="MyButtonStyle" >
            
            <Setter 
                Property="Background" 
                Value="Blue" />
            
            <Setter 
                Property="FontFamily" 
                Value="Arial Black" />
            
            <Setter 
                Property="FontSize" 
                Value="36" />           
        </Style>
    </Page.Resources>

    <Grid Background="#64B5F6">
        <TextBlock 
            Text="MINHA APLICAÇÃO"
            Foreground="{StaticResource MyBrush}" />
        
        <Button 
            Content="Meu Botão" 
            Height="100" 
            Style="{StaticResource MyButtonStyle}" 
            Margin="98,268,0,272" />
    </Grid>
</Page>

