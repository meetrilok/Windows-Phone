<Page
    x:Class="Config_01.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Config_01"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="#64B5F6" 
          RenderTransformOrigin="0.501,0.582">

        <Border 
            BorderBrush="Black" 
            BorderThickness="1" 
            HorizontalAlignment="Left" 
            Height="106" 
            Margin="10,31,0,0" 
            VerticalAlignment="Top" 
            Width="380" 
            Background="#FFBAC7EA"
            Opacity="0.5"/>

        <Button x:ConnectionId='1' 
            x:Name="BtnWrite" 
            Content="Display" 
            HorizontalAlignment="Left" 
            Margin="48,31,0,0" 
            VerticalAlignment="Top" 
                                      
            Tag="1"
            Width="126" />

        <Button x:ConnectionId='2' 
            x:Name="BtnRead" 
            Content="Notificações" 
            HorizontalAlignment="Left" 
            Margin="222,31,0,0" 
            VerticalAlignment="Top" 
                                      
            Tag="2"
            Width="126" />

        <TextBlock 
            HorizontalAlignment="Left" 
            Margin="15,13,0,0" 
            TextWrapping="Wrap" 
            Text="System" 
            VerticalAlignment="Top"/>

        <Button x:ConnectionId='3' 
            x:Name="BtnDelete" 
            Content="Bateria" 
            HorizontalAlignment="Left" 
            Margin="48,78,0,0" 
            VerticalAlignment="Top" 
                                      
            Tag="3"
            Width="126" />
        <Border 
        	BorderBrush="Black" 
        	BorderThickness="1" 
        	HorizontalAlignment="Left" 
        	Height="74" 
        	Margin="10,185,0,0" 
        	VerticalAlignment="Top" 
        	Width="380" 
        	Background="#FFBAC7EA"
        	Opacity="0.5"/>

        <TextBlock 
        	HorizontalAlignment="Left" 
        	Margin="15,167,0,0" 
        	TextWrapping="Wrap" 
        	Text="Devices" 
        	VerticalAlignment="Top" />

        <Button x:ConnectionId='4' 
        	x:Name="BtnWrite_Copy" 
        	Content="Bluetooth" 
        	HorizontalAlignment="Left" 
        	Margin="48,194,0,0" 
        	VerticalAlignment="Top" 
        	                          
        	Tag="4"
        	Width="126" />
        <Border 
        	BorderBrush="Black" 
        	BorderThickness="1" 
        	HorizontalAlignment="Left" 
        	Height="106" 
        	Margin="10,301,0,0" 
        	VerticalAlignment="Top" 
        	Width="380" 
        	Background="#FFBAC7EA"
        	Opacity="0.5"/>
        
        <Button x:ConnectionId='5' 
        	x:Name="BtnWrite_Copy1" 
        	Content="WiFi" 
        	HorizontalAlignment="Left" 
        	Margin="48,301,0,0" 
        	VerticalAlignment="Top" 
        	                          
        	Tag="5"
        	Width="126" />
        
        <Button x:ConnectionId='6' 
        	x:Name="BtnRead_Copy" 
        	Content="AirPlane" 
        	HorizontalAlignment="Left" 
        	Margin="222,301,0,0" 
        	VerticalAlignment="Top" 
        	                          
        	Tag="6"
        	Width="126" />
        
        <TextBlock 
        	HorizontalAlignment="Left" 
        	Margin="15,283,0,0" 
        	TextWrapping="Wrap" 
        	Text="Network" 
        	VerticalAlignment="Top"/>
        
        <Button x:ConnectionId='7' 
        	x:Name="BtnDelete_Copy" 
        	Content="Celular" 
        	HorizontalAlignment="Left" 
        	Margin="48,348,0,0" 
        	VerticalAlignment="Top" 
        	                          
        	Tag="7"
        	Width="126" />
    </Grid>

</Page>

