<Page
    x:Class="WebView_03.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WebView_03"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid 
        Background="#64B5F6"
        x:Name="MeuGrid" 
        Grid.Row="1">

        <TextBox
            x:Name="txtURL"
            HorizontalAlignment="Left"
            Margin="18,16,0,0"
            TextWrapping="NoWrap"
            Header="Digite a URL"
            Text=""
            InputScope="Url"
            VerticalAlignment="Top"
            Width="241" />

        <Button
		    x:Name="btnExecuta"
		    Content="Executa"
		    HorizontalAlignment="Left"
		    Margin="274,34,0,0"
		    VerticalAlignment="Top"
		    Click="btnExecuta_Click" />

        <WebView 
            HorizontalAlignment="Left" 
            Margin="18,100,0,0" 
            Name="NavegadorWeb" 
            Loaded="LoadWebView"
            NavigationStarting="InicioPagina"
            NavigationCompleted="CarregouPagina"
            NavigationFailed="PaginaFalhou"
            VerticalAlignment="Top" 
            Height="530"
            Width="370" />
    </Grid>

</Page>
