<Page
    x:Class="CheckBox_01.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ComboBox_02"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="#FF6C7476">

        <TextBlock
            x:Name="lblResultado"
            HorizontalAlignment="Left"
            Margin="88,61,0,0"
            TextWrapping="Wrap"
            Text="Resultado da Seleção"
            FontSize="24"
            VerticalAlignment="Top" />

        <TextBlock
            x:Name="TxtResultado"
            HorizontalAlignment="Left"
            Margin="44,138,0,0"
            TextWrapping="Wrap"
            Text=""
            FontSize="24"
            VerticalAlignment="Top" 
            Width="315" />

        <CheckBox x:ConnectionId='1'
                                
            x:Name="chkOpcao1"
            Content="Opção #1"
            HorizontalAlignment="Left"
            Margin="44,277,0,0"
            VerticalAlignment="Top" />

        <CheckBox
        	x:Name="chkOpcao2"
        	Content="Opção #2"
        	HorizontalAlignment="Left"
        	Margin="44,343,0,0"
        	VerticalAlignment="Top" />

        <Button x:ConnectionId='2'
            x:Name="BtnOk"
            Content="Selecionado"
            HorizontalAlignment="Left"
            Margin="130,486,0,0"
            VerticalAlignment="Top"
                                />

    </Grid>
</Page>

