<Page
    x:Class="Botao_07.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Botao_07"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="#FF6C7476">
        <TextBlock x:Name="lblResultado" HorizontalAlignment="Center" Margin="10,194,10,0" TextWrapping="Wrap" TextAlignment="Center" Text="Nenhum Botão Foi Escolhido" FontSize="24" VerticalAlignment="Top" Width="380" />

        <AppBarToggleButton x:ConnectionId='1' Label="Casa"                    Margin="52,272,0,0">
            <AppBarToggleButton.Icon>
                <FontIcon FontFamily="Segoe UI Symbol" Glyph="&#xE10F;" FontWeight="Bold"/>
            </AppBarToggleButton.Icon>
        </AppBarToggleButton>

        <AppBarToggleButton x:ConnectionId='2' Label="Letra"                     Margin="151,272,0,0">
            <AppBarToggleButton.Icon>
                <FontIcon FontFamily="Candara" Glyph="A" FontWeight="Bold"/>
            </AppBarToggleButton.Icon>
        </AppBarToggleButton>

        <AppBarButton x:ConnectionId='3' Label="Lixo"                     Margin="245,271,0,0">
            <AppBarButton.Icon>
                <FontIcon FontFamily="Segoe UI Symbol" Glyph="&#xE107;"/>
            </AppBarButton.Icon>
        </AppBarButton>
    </Grid>
</Page>

